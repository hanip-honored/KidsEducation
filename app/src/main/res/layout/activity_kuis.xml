<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/circle_back"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:layout_marginTop="11.5dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/circle_back"
            android:contentDescription="back_button" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="39dp"
            android:src="@drawable/back"
            android:contentDescription="back_button" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="8/10"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/textCategory"
        android:layout_toEndOf="@id/textNumber"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:progress="80"
        android:max="100"
        android:progressTint="#FF9688"
        android:backgroundTint="@color/white"
        android:scaleY="2.5"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:text="Apa nama hewan ini?" />

    <!-- ImageView untuk gambar -->
    <ImageView
        android:id="@+id/imageViewPreLogin"
        android:layout_width="174dp"
        android:layout_height="229dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="140dp"
        android:src="@drawable/babi"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="11.5dp"
        android:layout_marginBottom="40dp">

        <!-- CardView dengan Button Masuk -->
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="182dp"
            android:layout_height="77dp"
            android:layout_marginLeft="15dp"
            card_view:cardCornerRadius="34dp"
            card_view:cardBackgroundColor="@android:color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMasuk"
                android:layout_width="182dp"
                android:layout_height="81dp"
                android:text="Babi"
                android:textColor="#FF9688"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_extrabold"
                android:backgroundTint="@android:color/white"
                app:strokeColor="#FF9688"
                app:strokeWidth="5dp"
                app:cornerRadius="34dp" />
        </androidx.cardview.widget.CardView>

        <!-- CardView dengan Button Daftar -->
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="182dp"
            android:layout_height="77dp"
            android:layout_marginLeft="215dp"
            card_view:cardCornerRadius="34dp"
            card_view:cardBackgroundColor="@android:color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDaftar"
                android:layout_width="182dp"
                android:layout_height="81dp"
                android:text="Sapi"
                android:textColor="#FF9688"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_extrabold"
                android:backgroundTint="@android:color/white"
                app:strokeColor="#FF9688"
                app:strokeWidth="5dp"
                app:cornerRadius="34dp" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>
