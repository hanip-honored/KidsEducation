<!-- popup_welcome.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/popup_background"
    android:gravity="center"
    android:layout_gravity="center"
    android:elevation="8dp">

    <!-- Title -->
    <TextView
        android:id="@+id/popup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Bergabung!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/popup_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cewek"
        android:layout_marginBottom="10dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/popup_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halo, teman kecil! Selamat datang di EduKids, dunia belajar seru dan penuh petualangan! Di sini, kamu bisa bermain sambil belajar banyak hal menarikâ€”mulai dari mengenal hewan, buah-buahan, hingga benda-benda di sekitarmu! Setiap kali kamu menyelesaikan tantangan, kamu akan mendapatkan hadiah seru dan bertambah pintar! Yuk, kita mulai petualanganmu sekarang dan jelajahi semua keseruan di EduKids! ðŸš€âœ¨ Jangan lupa, selalu ingat bahwa belajar itu menyenangkan!"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_medium"
        android:justificationMode="inter_word"/>

    <!-- Close Button -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:backgroundTint="#CD2B23"
        android:textColor="@android:color/white" />
</LinearLayout>
