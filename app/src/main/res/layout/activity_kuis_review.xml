<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="293dp"
        android:layout_height="169dp"
        android:layout_marginTop="110dp">
        <ImageView
            android:id="@+id/header"
            android:layout_width="293dp"
            android:layout_height="169dp"
            android:src="@drawable/header_pink"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Pembahasan Soal"
            android:textAlignment="center"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="8/10"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_below="@id/textCategory"
        android:layout_toEndOf="@id/textNumber"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:progress="80"
        android:max="100"
        android:progressTint="#FF9688"
        android:backgroundTint="@color/white"
        android:scaleY="2.5"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:text="Apa nama hewan ini?" />

    <!-- ImageView untuk gambar -->
    <ImageView
        android:id="@+id/imageViewPreLogin"
        android:layout_width="174dp"
        android:layout_height="229dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/babi"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/background"
            android:layout_width="137dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shadow_hijau"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:text="Babi" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="24sp"
        android:textColor="#A2DDC2"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Benar!" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hewan Tersebut bernama Babi, yaitu hewan     mamalia     omnifora     yang banyak hidup di rawa-rawa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="11.5dp"
        android:layout_marginBottom="200dp">
        <Button
            android:id="@+id/buttonSebelumnya"
            android:layout_width="183dp"
            android:layout_height="57dp"
            android:backgroundTint="#FFC8C1"
            android:text="Sebelumnya"
            android:textColor="#6D4646"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="280dp"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/buttonSelanjutnya"
            android:layout_width="183dp"
            android:layout_height="57dp"
            android:backgroundTint="#FFC8C1"
            android:text="Selanjutnya"
            android:textColor="#6D4646"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="280dp"
            android:layout_marginLeft="215dp"/>
    </RelativeLayout>

</LinearLayout>
