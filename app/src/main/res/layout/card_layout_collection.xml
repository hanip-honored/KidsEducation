<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardCollection"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_koleksi"
    android:clipToOutline="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/cewek" />

        <TextView
            android:id="@+id/textKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageIcon"
            android:layout_centerHorizontal="true"
            android:text="Hewan"
            android:fontFamily="@font/poppins_extrabold"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#86290A"
            android:layout_gravity="center_horizontal|bottom"/>

        <TextView
            android:id="@+id/textNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="-2dp"
            android:background="@drawable/bg_circle_number"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#86290A"
            android:paddingTop="8dp"
            android:paddingRight="2dp"/>

    </RelativeLayout>

</FrameLayout>
